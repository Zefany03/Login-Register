<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State ketika tombol dipilih -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFEB3B" /> <!-- Kuning terang -->
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#FBC02D" /> <!-- Garis tepi lebih gelap -->
        </shape>
    </item>

    <!-- State default (tidak dipilih) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Putih -->
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#BDBDBD" /> <!-- Abu-abu terang -->
        </shape>
    </item>

</selector>
