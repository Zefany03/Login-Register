<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FB"
    tools:context=".EmotionTrackerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pertanyaan Emosi -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Š Bagaimana perasaan Anda hari ini?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih emosi yang paling menggambarkan perasaan Anda saat ini"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="12dp" />

        <!-- Emosi Buttons -->
        <GridLayout
            android:id="@+id/gridEmotionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Emosi 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_emotion_button_selector"
                android:padding="12dp"
                android:id="@+id/btnVeryHappy"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_very_happy" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sangat Bahagia"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>


            <!-- Emosi 3 -->
            <LinearLayout
                android:id="@+id/btnNeutral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_emotion_button_selector"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_neutral" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Netral"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Emosi 4 -->
            <LinearLayout
                android:id="@+id/btnSad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_emotion_button_selector"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_sad" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedih"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Emosi 5 -->
            <LinearLayout
                android:id="@+id/btnVerySad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_emotion_button_selector"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_very_sad" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sangat Sedih"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Emosi 6 -->
            <LinearLayout
                android:id="@+id/btnAngry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_emotion_button_selector"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_angry" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marah"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </GridLayout>

        <!-- Spacer -->
        <View android:layout_width="match_parent" android:layout_height="16dp" />

        <!-- Grafik Emosi Mingguan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ˆ Tren Mingguan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            />

        <!-- Statistik Bulanan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Statistik Bulanan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tvStatHappyDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari Bahagia: 0/30 hari"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvStatTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsistensi Tracking: 0/30 hari"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Riwayat Emosi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Riwayat Terbaru"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEmotionHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
